{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Pi Portal v1.7 Config File Schema",
  "type": "object",
  "properties": {
    "ARCHIVAL": {
      "description": "Archival integration configuration",
      "type": "object",
      "properties": {
        "AWS": {
          "description": "The AWS archival integration configuration",
          "type": "object",
          "properties": {
            "AWS_ACCESS_KEY_ID": {
              "type": "string",
              "description": "The AWS access key credential with write access to the buckets."
            },
            "AWS_SECRET_ACCESS_KEY": {
              "type": "string",
              "description": "The AWS access secret key credential with write access to the buckets."
            },
            "AWS_S3_BUCKETS": {
              "type": "object",
              "properties": {
                "LOGS": {
                  "type": "string",
                  "description": "The name of the AWS S3 bucket to upload archived logs to."
                },
                "VIDEOS": {
                  "type": "string",
                  "description": "The name of the AWS S3 bucket to upload captured videos to."
                }
              },
              "required": [
                "LOGS",
                "VIDEOS"
              ]
            }
          },
          "required": [
            "AWS_ACCESS_KEY_ID",
            "AWS_SECRET_ACCESS_KEY",
            "AWS_S3_BUCKETS"
          ]
        }
      },
      "anyOf": [
        {
          "required": [
            "AWS"
          ]
        }
      ]
    },
    "CHAT": {
      "description": "Chat ops logging integration configuration.",
      "type": "object",
      "properties": {
        "SLACK": {
          "description": "Configuration for the Slack chat ops integration.",
          "type": "object",
          "properties": {
            "SLACK_APP_SIGNING_SECRET": {
              "type": "string",
              "description": "The secret value generated by Slack to validate messages from your bot."
            },
            "SLACK_APP_TOKEN": {
              "type": "string",
              "description": "The app token generated by Slack to allow your bot use websockets."
            },
            "SLACK_BOT_TOKEN": {
              "type": "string",
              "description": "The token generated by Slack when you created a bot app."
            },
            "SLACK_CHANNEL": {
              "type": "string",
              "description": "The plain human readable name of the Slack channel where messages should be posted."
            },
            "SLACK_CHANNEL_ID": {
              "type": "string",
              "description": "The ID of the slack channel.  Can be found at the bottom of the dialogue for 'View Channel Details > About'."
            }
          },
          "required": [
            "SLACK_APP_SIGNING_SECRET",
            "SLACK_APP_TOKEN",
            "SLACK_BOT_TOKEN",
            "SLACK_CHANNEL",
            "SLACK_CHANNEL_ID"
          ]
        }
      },
      "anyOf": [
        {
          "required": [
            "SLACK"
          ]
        }
      ]
    },
    "LOGS": {
      "description": "Logging integration configuration.",
      "type": "object",
      "properties": {
        "LOGZ_IO": {
          "description": "Configuration for the LogzIO logging integration.",
          "type": "object",
          "properties": {
            "LOGZ_IO_TOKEN": {
              "type": "string",
              "description": "A token generated by log.io, which will be injected into streamed logs to identify your account."
            }
          },
          "required": [
            "LOGZ_IO_TOKEN"
          ]
        }
      },
      "anyOf": [
        {
          "required": [
            "LOGZ_IO"
          ]
        }
      ]
    },
    "SWITCHES": {
      "description": "Configured switches.",
      "type": "object",
      "properties": {
        "CONTACT_SWITCHES": {
          "description": "Configured contact switches.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "NAME": {
                "type": "string",
                "description": "The name of the switch as it will appear in notifications and logs (ie. Front Door)."
              },
              "GPIO": {
                "type": "number",
                "description": "The GPIO number this contact switch connects to."
              }
            },
            "required": [
              "NAME",
              "GPIO"
            ]
          }
        }
      },
      "required": [
        "CONTACT_SWITCHES"
      ]
    },
    "TEMPERATURE_SENSORS": {
      "description": "Configured temperature sensors.",
      "type": "object",
      "properties": {
        "DHT11_SENSORS": {
          "description": "Configured DHT11 temperature sensors.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "NAME": {
                "type": "string",
                "description": "The name of the sensor as it will appear in notifications and logs (ie. Living Room)."
              },
              "GPIO": {
                "type": "number",
                "description": "The GPIO number this DHT11 sensor connects to."
              }
            },
            "required": [
              "NAME",
              "GPIO"
            ]
          }
        }
      },
      "required": [
        "DHT11"
      ]
    }
  },
  "required": [
    "ARCHIVAL",
    "CHAT",
    "LOGS",
    "SWITCHES",
    "TEMPERATURE_SENSORS"
  ]
}
